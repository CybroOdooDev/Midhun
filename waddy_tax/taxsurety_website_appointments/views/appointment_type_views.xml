<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="appointment_type_view_form" model="ir.ui.view">
        <field name="name">appointment.type.view.form.inherit.taxsurety</field>
        <field name="model">appointment.type</field>
        <field name="inherit_id" ref="appointment.appointment_type_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='avatars_display']" position="after">
                <field name="company_id"
                       attrs="{'readonly' : [('website_id', '!=', False)]}"/>
                <field name="website_id"
                       attrs="{'required' : [('company_id', '!=', False)]}"/>
            </xpath>
        </field>
    </record>

</odoo>