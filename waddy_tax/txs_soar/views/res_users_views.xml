<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_users_form" model="ir.ui.view">
        <field name="name">res.users.form.inherit.txs_soar</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='preferences']" position="after">
                <page string="Txs Soar" name="txs_soar">
                    <group>
                        <group string="Header Image">
                            <field name="header_image" widget="image"/>
                        </group>
                    </group>

                    <group>
                        <group string="Hero Image"
                               name="hero_image">
                            <field name="hero_image_1" widget="image"/>
                            <field name="hero_image_2" widget="image"/>
                            <field name="hero_image_3" widget="image"/>
                        </group>
                        <group string="Vision Board"
                               name="vision_board">
                            <field name="vision_board_image_gallery_image_1" widget="image"/>
                            <field name="vision_board_image_gallery_image_2" widget="image"/>
                        </group>
                    </group>

                </page>
            </xpath>
        </field>
    </record>
</odoo>
