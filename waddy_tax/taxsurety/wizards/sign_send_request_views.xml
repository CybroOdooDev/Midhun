<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="sign_send_request_view_form"
            model="ir.ui.view">
        <field name="name">sign.send.request.view.form.inherit.taxsurety</field>
        <field name="model">sign.send.request</field>
        <field name="inherit_id"
               ref="sign.sign_send_request_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook"
                   position="after">
                <group style="margin-top: 10px;">
                    <field name="email_template_id"
                           context="{'default_model_id': model_id}"/>
        <field name="model_id" invisible="1"/>
                </group>
            </xpath>

            <xpath expr="//field[@name='message']" position="replace">
                <field name="message"
                       class="oe-bordered-editor"
                       attrs="{'readonly' : [('email_template_id', '!=', False)]}"/>
            </xpath>

            <xpath expr="//page//field[@name='subject']"
                   position="replace">
                <field name="subject"
                       force_save="1"
                       placeholder="Signature Request"
                       attrs="{'readonly' : [('email_template_id', '!=', False)]}"/>
            </xpath>

        </field>
    </record>
</odoo>