<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
     <data noupdate="0">
        <!--Email template for missing document -->
        <record id="email_template_missing_document" model="mail.template">
            <field name="name">Missing Document: Notification</field>
            <field name="model_id" ref="project.model_project_task"/>
            <field name="partner_to">{{ object.partner_id.id }}</field>
            <field name="subject">Missing documents for {{ object.company_id.name }}</field>
            <field name="description">Notify customers to add missing documents</field>
            <field name="body_html" type="html">
<div style="margin: 0px; padding: 0px;">
    <p style="margin: 0px; padding: 0px; font-size: 13px;">
        Dear
        <t t-if="object.partner_id.name">
            <t t-esc="object.partner_id.name"/>,
        </t>
        <br/>
        Hope you are doing well.<br/>
        Your documents for <t t-esc="object.name"/> is missing.
        <br/>
        Please reattach.
    </p>
</div>
            </field>
        </record>
     </data>
</odoo>