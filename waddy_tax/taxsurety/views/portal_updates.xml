<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="taxsurety_portal_updates"
              inherit_id="portal.portal_my_home">
        <xpath expr="//div[hasclass('o_portal_my_home')]" position="inside">
            <t t-if="(user_id.x_etp_q1 != '0' and user_id.x_etp_q1 != False) or (user_id.x_etp_q2 != '0' and user_id.x_etp_q2 != False) or (user_id.x_etp_q3 != '0' and user_id.x_etp_q3 != False) or (user_id.x_etp_q4 != '0' and user_id.x_etp_q4 != False)">
                <div class="mt-4">
                    <h3>Estimated Tax Payments</h3>
                    <div>
                        <t t-if="user_id.x_etp_q1 != '0' and user_id.x_etp_q1 != False">
                            <a class="list-group-item list-group-item-action d-flex align-items-center justify-content-between"
                               data-bs-toggle="modal"
                               title="Click to update Q1 Tax Payments"
                               data-bs-target="#UpdateContactFolders"
                               data-h5="Q1"
                               data-field_name="x_etp_q1">
                                <b>Q1:</b>
                                <t t-out="user_id.x_etp_q1"/>
                            </a>
                        </t>
                        <t t-if="user_id.x_etp_q2 != '0' and user_id.x_etp_q2 != False">
                            <a class="list-group-item list-group-item-action d-flex align-items-center justify-content-between"
                               data-bs-toggle="modal"
                               title="Click to update Q2 Tax Payments"
                               data-field_name="x_etp_q2"
                               data-h5="Q2"
                               data-bs-target="#UpdateContactFolders">
                                <b>Q2:</b>
                                <t t-out="user_id.x_etp_q2"/>
                            </a>
                        </t>
                        <t t-if="user_id.x_etp_q3 != '0' and user_id.x_etp_q3 != False">
                            <a class="list-group-item list-group-item-action d-flex align-items-center justify-content-between"
                               title="Click to update Q3 Tax Payments"
                               data-bs-toggle="modal"
                               data-field_name="x_etp_q3"
                               data-h5="Q3"
                               data-bs-target="#UpdateContactFolders">
                                <b>Q3:</b>
                                <t t-out="user_id.x_etp_q3"/>
                            </a>
                        </t>
                        <t t-if="user_id.x_etp_q4 != '0' and user_id.x_etp_q4 != False">
                            <a class="list-group-item list-group-item-action d-flex align-items-center justify-content-between"
                               data-bs-toggle="modal"
                               title="Click to update Q4 Tax Payments"
                               data-field_name="x_etp_q4"
                               data-h5="Q4"
                               data-bs-target="#UpdateContactFolders">
                                <b>Q4:</b>
                                <t t-out="user_id.x_etp_q4"/>
                            </a>
                        </t>
                    </div>
                </div>
            </t>
            <t t-if="user_id.x_est_savings != '0' and user_id.x_est_savings != False">
                <div class="mt-4">
                    <h3>Estimated Savings</h3>
                    <a class="list-group-item list-group-item-action d-flex align-items-center justify-content-between">
                        <b>Annual:</b>
                        <t t-out="user_id.x_est_savings"/>
                    </a>
                </div>
            </t>
            <t>
                <div class="mt-4">
                    <h3>Bank information</h3>
                    <a class="list-group-item list-group-item-action d-flex align-items-center justify-content-between">
                        <b>Bank name</b>
                        <t t-out="user_id.x_bank_name"/>
                    </a>
                    <a class="list-group-item list-group-item-action d-flex align-items-center justify-content-between">
                        <b>Bank account no.</b>
                        <t t-out="user_id.x_bank_acct_no"/>
                    </a>
                    <a class="list-group-item list-group-item-action d-flex align-items-center justify-content-between">
                        <b>Routing no.</b>
                        <t t-out="user_id.x_routing_no"/>
                    </a>
                </div>
            </t>
            <t>
                <div class="mt-4">
                    <h3>Credit card information</h3>
                    <a class="list-group-item list-group-item-action d-flex align-items-center justify-content-between">
                        <b>Credit card name</b>
                        <t t-out="user_id.x_cc_name"/>
                    </a>
                    <a class="list-group-item list-group-item-action d-flex align-items-center justify-content-between">
                        <b>Credit card no.</b>
                        <t t-out="user_id.x_cc_no"/>
                    </a>
                    <a class="list-group-item list-group-item-action d-flex align-items-center justify-content-between">
                        <b>Security code</b>
                        <t t-out="user_id.x_cc_code"/>
                    </a>
                    <a class="list-group-item list-group-item-action d-flex align-items-center justify-content-between">
                        <b>Expiration date</b>
                        <t t-out="user_id.x_cc_exp_date_month"/>/<t t-out="user_id.x_cc_exp_date_year"/>
                    </a>
                </div>
            </t>

            <div class="modal se-modal"
                 id="UpdateContactFolders"
                 tabindex="-1"
                 role="dialog"
                 t-att-aria-labelledby="UpdateContactFolders"
                 aria-hidden="true">
                <div class="modal-dialog se-modal__dialog"
                     role="document">
                    <div class="modal-content se-modal__content">
                        <div class="modal-header">
                            <h5 class="modal-title se-modal__title document">
                            </h5>
                            <button type="button"
                                    class="close"
                                    data-bs-dismiss="modal"
                                    aria-label="Close">
                                <span aria-hidden="false">
                                    X
                                </span>
                            </button>
                        </div>
                        <div class="modal-body upload--document-modal">
                            <form class="upload_form submission__form"
                                  style="display:flex; justify-content: center; flex-direction: column;"
                                  action="/my/contacts/update"
                                  method="post"
                                  enctype="multipart/form-data">
                                <input type="hidden"
                                       name="csrf_token"
                                       t-att-value="request.csrf_token()"/>

                                <input type="hidden"
                                       name="field_name"
                                       id="field_name"/>

                                <label for="workspace_name">
                                    Description
                                </label>
                                <textarea id="description"
                                          name="description"
                                          required="required"/>
                                <div style="display: contents;">
                                    <input type="submit"
                                           class="btn btn-primary mt-4"/>
                                </div>

                            </form>

                        </div>
                    </div>
                </div>
            </div>

